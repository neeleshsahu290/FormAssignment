<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <TextView

        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/fieldName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="@dimen/nm_margin_vertical"
        android:layout_marginHorizontal="@dimen/nm_margin_horizontal"
        tools:text="Select vender"
        android:textColor="@color/commomTextGreyColor"
        app:layout_constraintEnd_toStartOf="@id/fieldName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toEndOf="@id/fieldName"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/selectText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="@dimen/nm_margin_vertical"
        android:layout_marginHorizontal="@dimen/nm_margin_horizontal"
        android:hint="Click here to set"
        android:textColor="@color/commomTextColor"
        android:layout_width="0dp"
        android:textColorHint="@color/purple_500"
        android:layout_height="wrap_content"/>




    </androidx.constraintlayout.widget.ConstraintLayout>


