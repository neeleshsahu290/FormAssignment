<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <TextView
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/fieldName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="@dimen/nm_margin_vertical"
        android:layout_marginHorizontal="@dimen/nm_margin_horizontal"
        tools:text="Select vender"
        android:text="Select vender"
        android:textColor="@color/commomTextGreyColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:hintEnabled="false"

        android:layout_marginVertical="@dimen/nm_margin_vertical"
        android:layout_marginHorizontal="@dimen/nm_margin_horizontal"
        app:layout_constraintTop_toBottomOf="@id/fieldName"
        app:boxCornerRadiusBottomStart="@dimen/nm_corner_radius"
        app:boxCornerRadiusBottomEnd="@dimen/nm_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/nm_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/nm_corner_radius"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:textColor="@color/commomTextColor"

            android:padding="8dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter description"
            />
    </com.google.android.material.textfield.TextInputLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


