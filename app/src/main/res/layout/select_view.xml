<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView

        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/fieldName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="@dimen/nm_margin_vertical"
        android:layout_marginHorizontal="@dimen/nm_margin_horizontal"
        tools:text="Select vender"
        android:text="Select vender"
        android:textColor="@color/commomTextGreyColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <Spinner

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fieldName"
        android:id="@+id/coursesspinner"
        android:layout_height="45dp"
        android:layout_width="match_parent"
        android:layout_marginVertical="@dimen/nm_margin_vertical"
        android:layout_marginHorizontal="@dimen/nm_margin_horizontal"
        android:background="@drawable/rectagular_border"
      />




    </androidx.constraintlayout.widget.ConstraintLayout>


